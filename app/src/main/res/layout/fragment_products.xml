<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <Button
        android:id="@+id/product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="  Products"
        android:background="@color/btn_white"
        android:textSize="15sp"
        android:gravity="start"
        android:drawableStart="@drawable/ic_baseline_shopping_bag_24" />

    <Button
        android:id="@+id/product_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:padding="20dp"
        android:text="  Products categories"
        android:gravity="start"
        android:background="@color/btn_white"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_baseline_category_24" />

</LinearLayout>

</RelativeLayout>